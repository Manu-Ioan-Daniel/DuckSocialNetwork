<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" alignment="CENTER" prefHeight="184.0" prefWidth="330.0" spacing="10.0" styleClass="form" stylesheets="@../styling/addFormDesign.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SendMessageFormController">
   <children>
      <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Send a Message">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <TextField fx:id="messageField" maxWidth="1.7976931348623157E308" minHeight="1.0" minWidth="1.0" prefHeight="40.0" promptText="Send a message..." stylesheets="@../styling/addFormDesign.css" HBox.hgrow="ALWAYS" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleSend" prefHeight="40.0" styleClass="add-button" text="Send" textFill="WHITE" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleCancel" prefHeight="40.0" styleClass="add-button" text="Cancel" textFill="WHITE" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets left="10.0" right="10.0" />
   </padding>
</VBox>
